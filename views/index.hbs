		<div id="container">
			<div id="map"></div>
			<div id="sidebar">
				{{#each locations}}
					<div>
						<p>Name: {{name}}</p>
						<p>Address: {{address}}</p>
						<p>Latitude: {{position.lat}}</p>
						<p>Longitude: {{position.lng}}</p>
						<p>Owner: {{owner}}</p>
					</div>
				{{/each}}
			</div>
		</div>
		
		<div style="display: none">
			<div id="floating-panel">
				<b>Start: </b>
				<select id="start">
					{{#each locations}}
						<option value="{{address}}">{{name}}</option>
					{{/each}}
				</select>
				<b>End: </b>
				<select id="end">
					{{#each locations}}
						<option value="{{address}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
		</div>
		
