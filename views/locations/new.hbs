<h2>{{title}}</h2>

<div class="form">
	<form action="/locations" method="POST">
		<label for="name">Name: </label><input id="name" type="text" name="name" placeholder="Jan Doe">
		<label for="address">Address: </label><input id="address" type="text" name="address" placeholder="Fakestr. 123, Berlin 12050">
	
		<label for="lat">Latitude: </label><input id="lat" type="text" name="lat" placeholder="52.555">
		
		<label for="lng">Longitude: </label><input id="lng" type="text" name="lng" placeholder="13.333">
		
		<label for="imageUrl">Image: </label><input id="imageUrl" type="text" name="imageUrl" placeholder="imageUrl">
		
		<button id="btn-submit">Add Location</button>
  	</form>
</div>